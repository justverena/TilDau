<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tildau"
    >
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tildau"
        tools:targetApi="31"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Здесь теперь регистрация будет запускной активити -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Tildau">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Остальные активности -->
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.profile.ProfileActivity" />
        <activity android:name=".ui.register.RegisterEmailActivity" />
        <activity android:name=".ui.register.RegisterNameActivity" />
        <activity android:name=".ui.register.RegisterPasswordActivity" />
        <activity android:name=".ui.profile.AccountActivity"/>
        <activity android:name=".ui.profile.ProfileViewActivity"/>
        <activity android:name=".ui.profile.ProfileEditActivity"/>
        <activity android:name=".ui.course.CoursesActivity"/>




    </application>

</manifest>
